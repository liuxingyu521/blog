    "gulp-csso": "^4.0.1",
    "gulp-less": "^4.0.1",
    "gulp-rename": "^2.0.0",
    "gulp-uglify": "^3.0.2",
    "husky": ">=4",
    "lint-staged": ">=10",
    "stylelint": "^13.2.0",
